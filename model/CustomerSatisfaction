var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var ObjectId = Schema.ObjectId;

var customerSatisfactionSchema = new Schema({
  company: { type: Number, required: true },
  tenant: { type: Number, required: true },
  requester: String,
  submitter: { type: ObjectId, ref: "ExternalUser" },
  method: {
    type: String,
    enum: ["ivr", "sms", "email", "portal", "chat"],
    default: "ivr",
    required: true,
  },
  ticket: { type: ObjectId, ref: "Ticket" },
  satisfaction: {type: String, enum : ['satisfied', 'dissatisfied', '1-Detractors','2-Detractors', '3-Detractors', '4-Passives', '5-Promoters', 'not-offered'], default: 'not-offered', required: true},
  comment: String,
  contact: String,
  queue: String,
  created_at: { type: Date, default: Date.now, require: true },
  updated_at: { type: Date, default: Date.now, require: true },
});


//customerSatisfactionSchema.index({ company: 1, tenant: 1, ticket: 1}, { unique: true });
module.exports.CustomerSatisfaction = mongoose.model('CustomerSatisfaction', customerSatisfactionSchema);